{
    "name": "flashtag/cms",
    "description": "Flashtag CMS",
    "keywords": ["CMS", "flashtag"],
    "license": "MIT",
    "type": "project",
    "authors": [{
        "name": "Ryan Winchester",
        "email": "fungku@gmail.com",
        "homepage": "https://ryanwinchester.ca"
    }],
    "support": {
        "issues": "https://github.com/flashtag/flashtag/issues",
        "wiki": "https://github.com/flashtag/flashtag/wiki",
        "irc": "irc://irc.freenode.org/flashtag"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:flashtag/core.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:flashtag/admin.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:flashtag/api.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:flashtag/front.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:flashtag/data.git"
        }
    ],
    "require": {
        "php": ">=5.6",
        "laravel/framework": "5.1.*",
        "flashtag/admin": "dev-develop@dev",
        "flashtag/api": "dev-develop@dev",
        "flashtag/core": "dev-develop@dev",
        "flashtag/data": "dev-develop@dev",
        "flashtag/front": "dev-develop@dev",
        "filp/whoops": "^2.1"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "laravel/homestead": "^3.0"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "Flashtag\\Cms\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
